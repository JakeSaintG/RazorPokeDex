@page "{id:guid?}"
@model RazorPokedex.Pages.DexEntryActions.DeleteModel
@{
    <h1>Are you sure?</h1>
    <div class="center-block">
        <p>
            Researching for the PokeDex is a hard job! Mistakes happen. 
            <br />
            Before you delete this entry, make sure that you truly want to.
        </p>
        <p>
            Delete @Model.DexEntry.Name?
        </p>

        <form asp-page-handler="Delete" method="post">
            <button>Confirm Delete</button>
            <input type="hidden" name="id" value="@Model.DexEntry.Id" />
        </form>
    </div>
}
